<html>
    <body>
        <?php 

        function inSoNgay($thang, $nam){
            $thang; 
            $nam;
            echo "Thang {$thang} nam {$nam} => ";
            if($thang == 1 || $thang == 3 || $thang == 5 || $thang == 7 || $thang == 8 || $thang == 10 || $thang == 12){
                echo "31 ngay";
            }
            else if($thang == 4 || $thang == 6 || $thang == 9 || $thang == 11){
                echo "30 ngay";
            }
            else{
                if($nam % 4 == 0){
                    echo "29 ngay";
                }
                else{
                    echo "28 ngay";
                }
            }
        }
        echo inSoNgay(5, 2002);
            
        ?>
    </body>
</html>
