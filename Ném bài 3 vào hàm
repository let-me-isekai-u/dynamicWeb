<html>
    <body>
        <?php 

        function chuyenDoiNgay($ngay){
            $ngay;
            if($ngay >= 1 && $ngay < 8){
                echo "Ngay {$ngay} la : ";
                switch($ngay){
                    case 1:
                        echo "Chu nhat";
                        break;
                    case 2:
                        echo "Thu hai";
                        break;
                    case 3:
                        echo "Thu ba";
                        break;
                    case 4:
                        echo "Thu tu";
                        break;
                    case 5:
                        echo "Thu nam";
                        break;
                    case 6:
                        echo "Thu sau";
                        break;
                    default:
                        echo "Thu bay";
                }
            }
            else{
                echo "Sua lai";           
            }
        }
        echo chuyenDoiNgay(1);
            
        ?>
    </body>
</html>
